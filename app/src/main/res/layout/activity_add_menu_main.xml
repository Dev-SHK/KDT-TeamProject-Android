<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".admin.menu_management.AddMenuMainActivity">

    <LinearLayout
        android:id="@+id/fragContainer"
        android:layout_width="650dp"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/border_round"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainMenuPage"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/border_top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mainBtn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/border_round_thin"
                android:backgroundTint="#ffc0cb"
                android:clickable="true"
                android:focusable="true"
                android:text="메인"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sideBtn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/border_round_thin"
                android:backgroundTint="#ffc0cb"
                android:text="사이드"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/etcBtn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/border_round_thin"
                android:backgroundTint="#ffc0cb"
                android:text="기타"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragmentBoard01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/menu_item_page" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_bottom"
            android:gravity="center">

            <Button
                android:id="@+id/insertBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_round_thin"
                android:backgroundTint="#ffc0cb"
                android:text="메뉴 추가" />

            <Button
                android:id="@+id/modifyPageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_round_thin"
                android:backgroundTint="#ffc0cb"
                android:text="메뉴 수정" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentBoard02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:laout="@layout/menuappend_page" />

</LinearLayout>
