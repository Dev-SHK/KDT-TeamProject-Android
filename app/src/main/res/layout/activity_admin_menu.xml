<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminMenuActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/border_round_thin"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/loginInfo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/border_round_thin"
                android:text="로그아웃" />

            <TextView
                android:id="@+id/orderList"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="주문내역"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/menuManagement"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="메뉴관리"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/storeManagement"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="지점관리"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="설정"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/editUserInfo"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="회원정보"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/qrCreate"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_round"
                android:gravity="center"
                android:text="QR코드 생성"
                android:textSize="30dp" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffc0cb" />
    </LinearLayout>


</LinearLayout>